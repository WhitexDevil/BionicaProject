<UserControl x:Class="project.Controls.UserControlInt"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              xmlns:local="clr-namespace:project.Controls" 
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="280">
    <Grid>
        <Slider  x:Name="Slider1" HorizontalAlignment="Left" Margin="10,40,10,0" Width="260" Maximum="100" Minimum="1" ValueChanged="Slider1_ValueChanged"/>
        <Label  x:Name="LabelSlider1"   HorizontalAlignment="Left" Margin="228,10,0,0" VerticalAlignment="Top" Height="30" Width="45" RenderTransformOrigin="1.039,0.682"/>
        <Label  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Height="30" Width="178" Content="{Binding yProp, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:UserControlInt}}}"/>

    </Grid>
</UserControl>
